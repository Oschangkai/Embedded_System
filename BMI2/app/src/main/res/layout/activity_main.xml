<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itac.yzu.bmi2.MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/heightLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="28dp" />

            <EditText
                android:id="@+id/heightET"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="14dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/weightLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="體重："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="86dp" />

            <EditText
                android:id="@+id/weightET"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="72dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/resetBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resetAll"
        android:text="重置系統"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/genderRadioGroup"
        app:layout_constraintRight_toRightOf="@+id/genderRadioGroup" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/maleRadioBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        android:layout_marginEnd="16dp">

        <RadioButton
            android:id="@+id/maleRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男性" />

        <RadioButton
            android:id="@+id/femaleRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="女性" />
    </RadioGroup>

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintLeft_toLeftOf="@+id/tableLayout"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        android:id="@+id/tableLayout2"
        android:layout_marginLeft="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bmiLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/bmiTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="179dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ideal_weightLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理想體重："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/ideal_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="212dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bmi_resultLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI 評估結果："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="243dp" />

            <TextView
                android:id="@+id/bmi_resultTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="243dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ideal_weight_resultLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理想體重評估結果："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="275dp" />

            <TextView
                android:id="@+id/ideal_weight_resultTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="275dp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="135dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/suggestionLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建議："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="321dp" />

            <TextView
                android:id="@+id/suggestionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="321dp" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
