<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/demo01_dinorsaur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="405dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageView2"
                android:layout_toStartOf="@+id/camera"
                android:layout_weight="0.56"
                android:text="貓頭鷹福寶，是整個奧爾森林學園裡面最有智慧的守護者。 福寶的鳥名叫做鵂鶹，隸屬於鴞形目鴟鴞科，平常住在中低海拔的森林裡，冬天則會為了覓食而出現在像虎頭山公園這種森林邊緣當中。 "
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:layout_below="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="250dp"
                android:layout_height="270dp"
                android:background="@drawable/demo01_owl_pic"
                android:layout_below="@+id/textView17"
                android:layout_toStartOf="@+id/camera" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="貓頭鷹福寶"
                android:textColor="@color/cardview_dark_background"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/camera"
                style="@android:style/Widget.ImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/camera" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>