<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itac.yzu.fib.MainActivity">

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fibonacci of "
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/iTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/TV"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/eqTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" = "
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/iTV"
        android:layout_marginLeft="104dp" />

    <TextView
        android:id="@+id/valTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/eqTV"
        android:layout_marginLeft="157dp" />

    <Button
        android:id="@+id/incBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="110dp"
        android:text="INC"
        app:layout_constraintLeft_toLeftOf="@+id/TV"
        app:layout_constraintTop_toBottomOf="@+id/TV" />

    <Button
        android:id="@+id/decBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEC"
        app:layout_constraintLeft_toRightOf="@+id/incBTN"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/iTV" />

    <Button
        android:id="@+id/compBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMP"
        app:layout_constraintLeft_toRightOf="@+id/decBTN"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/eqTV" />

    <Button
        android:id="@+id/resBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        app:layout_constraintLeft_toRightOf="@+id/compBTN"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/valTV" />
</android.support.constraint.ConstraintLayout>
