<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itac.yzu.fib.MainActivity">

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fibonacci of "
        android:textSize="24sp"
        android:layout_marginLeft="106dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp" />

    <TextView
        android:id="@+id/iTV"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginLeft="81dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/TV" />

    <TextView
        android:id="@+id/eqTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" = "
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/iTV"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/valTV"
        android:layout_width="48dp"
        android:layout_height="29dp"
        android:layout_marginLeft="58dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV"
        app:layout_constraintLeft_toRightOf="@+id/eqTV" />

    <Button
        android:id="@+id/incBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="INC"
        android:text="INC"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="95dp"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/decBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="DEC"
        android:text="DEC"
        app:layout_constraintLeft_toRightOf="@+id/incBTN"
        app:layout_constraintBaseline_toBaselineOf="@+id/incBTN" />

    <Button
        android:id="@+id/compBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="COMP"
        android:text="COMP"
        app:layout_constraintLeft_toRightOf="@+id/decBTN"
        app:layout_constraintBaseline_toBaselineOf="@+id/incBTN" />

    <Button
        android:id="@+id/resBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="106dp"
        android:onClick="RES"
        android:text="RESET"
        app:layout_constraintLeft_toRightOf="@+id/compBTN"
        app:layout_constraintBaseline_toBaselineOf="@+id/incBTN" />
</android.support.constraint.ConstraintLayout>
