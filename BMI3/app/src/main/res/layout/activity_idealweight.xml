<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itac.yzu.bmi3.IdealWeightActivity">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="48dp"
        android:stretchColumns="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDataBTN"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bmiLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="179dp" />

            <TextView
                android:id="@+id/bmiTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="179dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ideal_weightLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理想體重："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/ideal_weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="212dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bmi_resultLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI 評估結果："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="243dp" />

            <TextView
                android:id="@+id/bmi_resultTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="243dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ideal_weight_resultLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理想體重評估結果："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="275dp" />

            <TextView
                android:id="@+id/ideal_weight_resultTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="275dp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="135dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/suggestionLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建議："
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="321dp" />

            <TextView
                android:id="@+id/suggestionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="321dp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/inputDataBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="16dp"
        android:onClick="gotoMainPage"
        android:text="輸入資料"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aboutUsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="16dp"
        android:onClick="gotoAboutUs"
        android:text="說明"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
